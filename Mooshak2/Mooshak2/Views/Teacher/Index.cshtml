				<div id="settings" class="tab-pane fade in active" > <!-- Tab #1 : START -->

					<h3>Settings</h3>
					@using (Html.BeginForm("Create", "Teacher", FormMethod.Post, new { id = "assignmentForm" }))
					{
						@Html.ValidationSummary(true, "Choose Course Create a Assignment For");

						@Html.DropDownListFor(Model => Model.CourseID, Model.Courses, "Choose...", new { @class = "form-control", required = "" })
						@Html.ValidationMessageFor(Model => Model.CourseID);

						@Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", placeholder = "Assignment 1", required = "" })
						@Html.ValidationMessageFor(Model => Model.Name);

						<label for="assignmentStart">Assignment Starts</label>
						<input type="datetime-local" id="assignmentStart" class="form-control" placeholder="9/9/1999" />
						<br />
						<label for="assignmentEnd">Assignment Ends</label>
						<input type="datetime-local" id="assignmentEnd" class="form-control" placeholder="9/9/1999" />
						<br />
						<label for="allowGroups">Allow Groups</label>
						<input type="checkbox" id="allowGroups" value="allowGroups" onclick="validate()" />
						<br />
						<select name="groupSize" id="groupSize" disabled>
							<option value="1">1</option>
							<option value="2">2</option>
							<option value="3">3</option>
							<option value="4">4</option>
							<option value="5">5</option>
