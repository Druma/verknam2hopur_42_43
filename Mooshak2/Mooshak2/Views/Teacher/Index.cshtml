@model Mooshak2.ViewModels.AssignmentViewModel

@{
    Layout = "~/Views/Shared/_Masterpage.cshtml";
}

@{
    ViewBag.Title = "Teachers";
}

<nav class="navbar navbar navbar-static-top" id="sidebar">
    <img class="glyphicon-align-center" src="~/Content/Pictures/hr.gif" alt="hrlogo" height="60" width="60" />
    <div class="text-center">
        <h5>Teacher Name</h5>
        <button class="btn btn-primary" id="logout" onclick="location.href='/?dis=yes'">Logout</button>
    </div>
</nav>

<div class="container " id="main">
	<!-- row #1 : Tabs -->
	<div class="row">
		<div class="col-sm-12">

			<ul class="nav nav-tabs">
				<li>
					@Html.ActionLink("Settings", "Index", null, new { @class = "active" })
				</li>
				<li>
					@Html.ActionLink("Student Link", "StudentList")
				</li>
			</ul>

		</div>
	</div>
	<!-- row #2 : Tabed Content-->
	<div class="row">
		<div class="col-sm-12">

			<div class="tab-content">

				<div id="settings"> <!-- Tab #1 : START -->

					<h3>Settings</h3>
					@using (Html.BeginForm("Create", "Teacher", FormMethod.Post, new { @class = "no-border", id = "assignmentForm" }))
					{
						@Html.ValidationSummary(true, "Choose Course Create a Assignment For");

						@Html.DropDownListFor(Model => Model.CourseID, Model.Courses, "Choose...", new { @class = "form-control"})

						@Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", placeholder = "Assignment 1", required = "" })

						<label for="assignmentStart">Assignment Starts</label>
						<input type="datetime-local" id="assignmentStart" class="form-control" placeholder="9/9/1999" />
						<br />
						<label for="assignmentEnd">Assignment Ends</label>
						<input type="datetime-local" id="assignmentEnd" class="form-control" placeholder="9/9/1999" />
						<br />
						<label for="allowGroups">Allow Groups</label>
						<br />
						<select name="groupSize" id="groupSize">
							<option value="0">No groups</option>
							<option value="1">1</option>
							<option value="2">2</option>
							<option value="3">3</option>
							<option value="4">4</option>
							<option value="5">5</option>
							<option value="6">6</option>
							<option value="7">7</option>
							<option value="8">8</option>
							<option value="9">9</option>
						</select>
						<br />
						<label for="NumOfSubmission">Number of Submissions</label>
						<br />
						<select name="submissionNumber" id="submissionNumber">
							<option value="0">Infinite uploads</option>
							<option value="10">10</option>
							<option value="20">20</option>
							<option value="30">30</option>
							<option value="40">40</option>
							<option value="50">50</option>
							<option value="60">60</option>
							<option value="70">70</option>
							<option value="80">80</option>
							<option value="90">90</option>
							<option value="100">100</option>
						</select>
						<br />
						<lable>Assignment Parts</lable>
						<br />
						<select name="assignmentParts" id="assignmentParts">
							<option value="1">1</option>
							<option value="2">2</option>
							<option value="3">3</option>
						</select>
						<br />
						<!--First milestone input.-->
						@Html.LabelFor(Model => Model.Description)
						<br />
						@Html.TextAreaFor(Model => Model.Description)
						<br />
						<label class="btn btn-primary">
							<input type="file" name="file" id="file" />
							Upload solution file.
						</label>
						<input type="hidden" value="Solution File..." name="solutionFile" , id="solutionFile" />
						<br />
						<!--Second milestone input.-->
						<label id="descriptionLabel2" for="Description2">Description 2</label>
						<br />
						<textarea id="Description2" name="Description2"></textarea>
						<br />
						<label id="uploadBtn2" class="btn btn-primary">
							<input type="file" name="file2" id="file2" />
							Upload solution file.
						</label>
						<input type="hidden" value="Solution File..." name="solutionFile2" , id="solutionFile2" />
						<br />
						<!--Third milestone input.-->
						<label id="descriptionLabel3" for="Description3">Description 3</label>
						<br />
						<textarea id="Description3" name="Description3"></textarea>
						<br />
						<label id="uploadBtn3" class="btn btn-primary">
							<input type="file" name="file3" id="file3" />
							Upload solution file.
						</label>
						<input type="hidden" value="Solution File..." name="solutionFile3" , id="solutionFile3" />
						<input type="button" id="btnSave" value="Create" />
					}
					<!--TODO: Code for dynamic display of Solution picks and project descriptions.-->

				</div> <!-- Tab #1 : END -->			
			</div>
		</div>
	</div> 
</div>
