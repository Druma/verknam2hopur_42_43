@model Mooshak2.ViewModels.UserModel
<!--Here we use the _Login layout from the Shared directory-->
@{
    Layout = "~/Views/Shared/_Masterpage.cshtml";
}
@{
    ViewBag.Title = "Log In";
}


@using (Html.BeginForm("Index", "Student", FormMethod.Post, new { @class = "form-signin login" }))
{
    @Html.ValidationSummary(true, "Login failed. Check your login details");
    <fieldset>

        <!--<legend>Login Form</legend>-->

        <img src="~/Content/Pictures/hr.gif" alt="hrlogo" height="100" width="100" />

        <div>
            @Html.TextBoxFor(u => u.Username, new { @class = "form-control login", placeholder = "Username", required = "", autofocus = "" })
            @Html.ValidationMessageFor(u => u.Username)
        </div>

        <div>
            @Html.PasswordFor(u => u.Password, new { @class = "form-control login", name = "Password", placeholder = "Password", required = "" })
            @Html.ValidationMessageFor(u => u.Password)
        </div>

        <input type="submit" value="Log In" class="btn btn-success login" />

    </fieldset>

}
